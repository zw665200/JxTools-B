<?xml version="1.0" encoding="utf-8"?>
<com.zyp.cardview.YcCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_100"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@drawable/shape_corner_white"
    android:fitsSystemWindows="true"
    android:orientation="horizontal"
    app:ycCardBackgroundColor="@color/color_white"
    app:ycCardCornerRadius="5dp"
    app:ycCardElevation="2dp"
    app:ycCardPreventCornerOverlap="false"
    app:ycStartShadowColor="@color/color_cardview_shadow">

    <LinearLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/service_icon"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/color_content"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <View
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/dp_100"
        android:background="@color/color_cross_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_service_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_black"
            android:textSize="@dimen/sp_15" />

        <TextView
            android:id="@+id/tv_service_descrition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:textColor="@color/color_dark_grey"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

</com.zyp.cardview.YcCardView>